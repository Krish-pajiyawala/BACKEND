<%- include('../header')%>

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Blog Details</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/blog/view-blog">Blog</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><%=blog.title%></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <!-- Blog Header -->
                        <div class="blog-header mb-4 text-center">
                            <h1 class="display-5 font-weight-bold text-dark mb-3"><%=blog.title%></h1>
                            <div class="d-flex flex-wrap justify-content-center align-items-center text-muted mb-4">
                                <div class="mr-4 d-flex align-items-center">
                                    <i class="fas fa-user-circle mr-2"></i>
                                    <span><strong>Author:</strong> <%=blog.name%></span>
                                </div>
                                <div class="mr-4 d-flex align-items-center">
                                    <i class="fas fa-calendar-alt mr-2"></i>
                                    <span><%=blog.date%></span>
                                </div>
                                <div class="mr-4 d-flex align-items-center">
                                    <i class="fas fa-tag mr-2"></i>
                                    <span class="badge badge-pill badge-info"><%=blog.category%></span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-circle mr-2 <%=blog.status === 'Published' ? 'text-success' : 'text-warning'%>"></i>
                                    <span><%=blog.status%></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Author & Image Section -->
                            <div class="col-md-4 mb-4">
                                <div class="card border-0 bg-light">
                                    <div class="card-body text-center p-4">
                                        <div class="author-image-wrapper mb-3">
                                            <img src="<%=blog.authorImage%>" alt="<%=blog.name%>" class="img-fluid rounded-circle shadow" style="width: 180px; height: 180px; object-fit: cover;" />
                                        </div>
                                        <h5 class="card-title mb-1"><%=blog.name%></h5>
                                        <p class="text-muted mb-3">Author</p>
                                        <div class="d-flex justify-content-center mt-4">
                                            <a href="/blog/edit-blog/<%=blog.id%>" class="btn btn-warning btn-sm mr-2">
                                                <i class="fas fa-edit mr-1"></i> Edit
                                            </a>
                                            <a href="/blog/delete-blog/<%=blog.id%>" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash-alt mr-1"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Blog Meta Info Card -->
                                <div class="card border-0 mt-4" style="background-color: #f8f9fa;">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-3 text-uppercase text-dark font-weight-bold">
                                            <i class="fas fa-info-circle mr-2"></i>Blog Details
                                        </h6>
                                        <ul class="list-unstyled mb-0">
                                            <li class="mb-2 d-flex align-items-center">
                                                <i class="fas fa-folder-open mr-3 text-primary"></i>
                                                <div>
                                                    <small class="text-muted">Category</small>
                                                    <div class="font-weight-medium"><%=blog.category%></div>
                                                </div>
                                            </li>
                                            <li class="mb-2 d-flex align-items-center">
                                                <i class="fas fa-flag mr-3 text-success"></i>
                                                <div>
                                                    <small class="text-muted">Status</small>
                                                    <div class="font-weight-medium"><%=blog.status%></div>
                                                </div>
                                            </li>
                                            <li class="d-flex align-items-center">
                                                <i class="fas fa-clock mr-3 text-info"></i>
                                                <div>
                                                    <small class="text-muted">Published On</small>
                                                    <div class="font-weight-medium"><%=blog.date%></div>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Blog Content Section -->
                            <div class="col-md-8">
                                <div class="card border-0">
                                    <div class="card-body p-4">
                                        <div class="content-section">
                                            <h5 class="card-title text-dark mb-4 pb-2 border-bottom">
                                                <i class="fas fa-align-left mr-2"></i>Content
                                            </h5>
                                            <div class="blog-content" style="line-height: 1.8; font-size: 1.05rem;">
                                                <%= blog.content %>
                                            </div>
                                            
                                            <!-- Action Buttons for Mobile -->
                                            <div class="d-flex d-md-none justify-content-center mt-5 pt-4 border-top">
                                                <a href="/blog/edit-blog/<%=blog.id%>" class="btn btn-warning mr-3">
                                                    <i class="fas fa-edit mr-2"></i> Edit Blog
                                                </a>
                                                <a href="/blog/delete-blog/<%=blog.id%>" class="btn btn-danger">
                                                    <i class="fas fa-trash-alt mr-2"></i> Delete Blog
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Back to Blog List -->
                <div class="text-center mt-4">
                    <a href="/blog/view-blog" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-2"></i> Back to Blog List
                    </a>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
</div>

<!-- ============================================================== -->
<!-- footer -->
<!-- ============================================================== -->
<%- include('../footer')%>
<!-- ============================================================== -->
<!-- End footer -->
<!-- ============================================================== -->

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<style>
    .blog-content {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }
    
    .blog-content p {
        margin-bottom: 1.2rem;
    }
    
    .author-image-wrapper {
        border: 5px solid white;
        border-radius: 50%;
        display: inline-block;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .card {
        border-radius: 10px;
        overflow: hidden;
    }
    
    .badge-pill {
        padding: 0.4em 0.9em;
        font-size: 0.85rem;
    }
    
    @media (max-width: 768px) {
        .display-5 {
            font-size: 1.8rem;
        }
        
        .blog-header .d-flex {
            flex-direction: column;
            align-items: flex-start !important;
        }
        
        .blog-header .d-flex > div {
            margin-right: 0 !important;
            margin-bottom: 0.5rem;
        }
    }
</style>