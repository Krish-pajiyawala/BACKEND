<%- include('../header') %>
<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Extra Categories Management</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="/category">Categories</a></li>
                            <li class="breadcrumb-item"><a href="/subcategory">Sub Categories</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Extra Categories</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <!-- Header Section -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h5 class="card-title mb-1">Extra Categories List</h5>
                                <p class="text-muted mb-0">Manage all extra categories in your system</p>
                            </div>
                            <a href="/exteracategory/add-exteracategory" class="btn btn-success">
                                <i class="fas fa-plus"></i> Add New Extra Category
                            </a>
                        </div>

                        <!-- Main Table -->
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th width="5%" class="text-center">#</th>
                                        <th width="15%">Category</th>
                                        <th width="15%">Sub Category</th>
                                        <th width="15%">Extra Category</th>
                                        <th width="20%">Image</th>
                                        <th width="10%" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(exteracategories.length > 0) { %>
                                        <% exteracategories.forEach((exteracateg, i)=>{ %>
                                            <tr class="align-middle">
                                                <td class="text-center">
                                                    <div class="serial-number">
                                                        <span class="badge badge-primary"><%= i+1 %></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="category-info">
                                                        <div class="category-name font-weight-bold">
                                                            <%= exteracateg.categoryId.categoryName %>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="subcategory-info">
                                                        <div class="subcategory-name font-weight-bold">
                                                            <%= exteracateg.subCategoryId.subCategoryName %>
                                                        </div>
                                                        <small class="text-muted">Subcategory</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="extera-category-info">
                                                        <div class="extera-category-name font-weight-bold text-primary">
                                                            <%= exteracateg.exteraCategoryName %>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <% if(exteracateg.categoryId.categoryImage) { %>
                                                        <div class="image-container">
                                                            <img src="<%= exteracateg.categoryId.categoryImage %>" 
                                                                 alt="<%= exteracateg.categoryId.categoryName %>" 
                                                                 class="img-thumbnail rounded"
                                                                 style="width: 80px; height: 80px; object-fit: cover;">
                                                        </div>
                                                    <% } else { %>
                                                        <div class="no-image-placeholder">
                                                            <div class="rounded bg-light d-flex align-items-center justify-content-center" 
                                                                 style="width: 80px; height: 80px;">
                                                                <i class="fas fa-image text-muted fa-2x"></i>
                                                            </div>
                                                        </div>
                                                    <% } %>
                                                </td>
                                                <td class="text-center">
                                                    <div class="action-buttons">
                                                        <a href="/exteracategory/edit-exteracategory/<%= exteracateg.id %>" 
                                                           class="btn btn-sm btn-outline-primary mb-1"
                                                           title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a href="/exteracategory/delete-exteracategory/<%= exteracateg.id %>" 
                                                           class="btn btn-sm btn-outline-danger mb-1"
                                                           title="Delete"
                                                           onclick="return confirm('Are you sure you want to delete this extra category?')">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center py-5">
                                                <div class="empty-state">
                                                    <div class="empty-icon mb-4">
                                                        <i class="fas fa-layer-group fa-4x text-muted"></i>
                                                    </div>
                                                    <h4 class="text-muted mb-3">No Extra Categories Found</h4>
                                                    <p class="text-muted mb-4">Extra categories help organize your products further under subcategories.</p>
                                                    <a href="/exteracategory/add-exteracategory" class="btn btn-primary">
                                                        <i class="fas fa-plus"></i> Create Your First Extra Category
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->

    <style>
        /* Custom CSS for Extra Categories Management */
        .page-title {
            color: #2c3e50;
            font-weight: 600;
        }
        
        .card-title {
            color: #2c3e50;
            font-weight: 600;
        }
        
        .stats-card {
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
        }
        
        .stats-icon {
            font-size: 2.5rem;
            opacity: 0.8;
            margin-bottom: 15px;
        }
        
        .stats-label {
            font-size: 0.9rem;
            opacity: 0.9;
            margin-bottom: 5px;
        }
        
        .stats-value {
            font-size: 2rem;
            font-weight: 600;
            margin: 0;
        }
        
        .bg-gradient-primary {
            background: linear-gradient(45deg, #3498db, #2980b9);
        }
        
        .bg-gradient-info {
            background: linear-gradient(45deg, #17a2b8, #138496);
        }
        
        .bg-gradient-success {
            background: linear-gradient(45deg, #28a745, #218838);
        }
        
        .bg-gradient-warning {
            background: linear-gradient(45deg, #ffc107, #e0a800);
        }
        
        .table thead th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            border-top: none;
        }
        
        .table-hover tbody tr:hover {
            background-color: rgba(52, 152, 219, 0.05);
            transform: translateY(-2px);
            transition: all 0.2s ease;
        }
        
        .hierarchy-path {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 10px;
        }
        
        .hierarchy-step {
            display: flex;
            flex-direction: column;
        }
        
        .step-name {
            font-size: 0.9rem;
            font-weight: 500;
        }
        
        .hierarchy-arrow {
            font-size: 0.8rem;
        }
        
        .serial-number .badge {
            font-size: 0.9rem;
            padding: 6px 10px;
            border-radius: 50%;
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .category-info,
        .subcategory-info,
        .extera-category-info {
            line-height: 1.4;
        }
        
        .img-thumbnail {
            border: 2px solid #dee2e6;
            transition: all 0.3s ease;
        }
        
        .img-thumbnail:hover {
            border-color: #3498db;
            transform: scale(1.1);
        }
        
        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }
        
        .action-buttons .btn {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            font-size: 0.9rem;
        }
        
        .empty-state {
            padding: 40px 20px;
        }
        
        .empty-icon {
            opacity: 0.5;
        }
        
        .color-indicator {
            width: 20px;
            height: 20px;
            border-radius: 4px;
        }
        
        .distribution-card {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid #3498db;
        }
        
        .percentage-badge .badge {
            font-size: 0.8rem;
            padding: 4px 8px;
        }
        
        .progress {
            background-color: #e9ecef;
            border-radius: 4px;
            overflow: hidden;
        }
        
        .progress-bar {
            border-radius: 4px;
        }
        
        @media (max-width: 768px) {
            .hierarchy-path {
                flex-direction: column;
                align-items: flex-start;
                gap: 5px;
            }
            
            .hierarchy-arrow {
                transform: rotate(90deg);
                margin: 5px 0;
            }
            
            .action-buttons {
                flex-direction: row;
                justify-content: center;
            }
            
            .stats-card {
                margin-bottom: 15px;
            }
        }
    </style>
</div>
<!-- ============================================================== -->
<%- include('../footer') %> 