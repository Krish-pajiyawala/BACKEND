<%- include('../header') %>

<div class="page-wrapper">

    <!-- ================= Breadcrumb ================= -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex align-items-center">
                <h4 class="page-title">Blogs</h4>

                <div class="mx-auto">
                    <form method="get" action="/blog/view-blog" class="form-inline">
                        <input type="text" name="search" class="form-control mr-2" placeholder="Search by author" value="<%= search %>">
                        <select name="category" class="form-control mr-2">
                            <option value="" <%= !category ? 'selected' : '' %>>All Categories</option>
                            <% categories.forEach(cat => { %>
                                <option value="<%=cat%>" <%= category==cat ? 'selected' : '' %>><%=cat%></option>
                            <% }) %>
                        </select>

                        <select name="status" class="form-control mr-2">
                            <option value="" <%= !status ? 'selected' : '' %>>All Status</option>
                            <option value="Draft" <%= status=='Draft' ? 'selected' : '' %>>Draft</option>
                            <option value="Published" <%= status=='Published' ? 'selected' : '' %>>Published</option>
                        </select>

                        <button type="submit" class="btn btn-primary">Filter</button>
                    </form>
                </div>

                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active">Blogs</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ================= End Breadcrumb ================= -->

    <!-- ================= Container ================= -->
    <div class="container-fluid">

        <!-- ================= Blog Grid ================= -->
        <div class="row">

            <% if (blogs.length === 0) { %>
                <div class="col-12 text-center">
                    <h5>No blogs found</h5>
                </div>
            <% } %>

            <% blogs.forEach((blog) => { %>
                <!-- âœ… 4 blogs per row -->
                <div class="col-12 col-sm-6 col-md-3 mb-4">
                    <div class="card h-100">

                        <img
                            src="<%= blog.authorImage %>"
                            class="card-img-top"
                            style="height:180px; object-fit:cover;"
                            alt="Blog Image"
                        >

                        <div class="card-body">
                            <h6 class="card-title text-center">
                                <%= blog.title %>
                            </h6>

                            <p class="card-text mb-1">
                                <strong>Author:</strong> <%= blog.name %>
                            </p>

                            <p class="card-text mb-1">
                                <strong>Category:</strong> <%= blog.category %>
                            </p>

                            <p class="card-text mb-1">
                                <strong>Status:</strong> <%= blog.status %>
                            </p>

                            <p class="card-text mb-1">
                                <strong>Date:</strong> <%= blog.date %>
                            </p>

                            <p class="card-text">
                                <%= blog.content.length > 60
                                    ? blog.content.substring(0, 60) + '...'
                                    : blog.content %>
                            </p>
                        </div>

                        <div class="card-footer text-center">
                            <a href="/blog/view-blog/<%= blog._id %>"
                               class="btn btn-outline-success btn-sm">
                                View Blog
                            </a>
                        </div>

                    </div>
                </div>
            <% }) %>

        </div>
        <!-- ================= End Blog Grid ================= -->

        <!-- ================= Pagination ================= -->
        <% if (totalPages > 1) { %>
            <nav class="mt-4">
                <ul class="pagination justify-content-center">

                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link"
                               href="?page=<%= currentPage - 1 %>&search=<%= encodeURIComponent(search || '') %>&category=<%= encodeURIComponent(category || '') %>&status=<%= encodeURIComponent(status || '') %>">
                                Previous
                            </a>
                        </li>
                    <% } %>

                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link"
                               href="?page=<%= i %>&search=<%= encodeURIComponent(search || '') %>&category=<%= encodeURIComponent(category || '') %>&status=<%= encodeURIComponent(status || '') %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link"
                               href="?page=<%= currentPage + 1 %>&search=<%= encodeURIComponent(search || '') %>&category=<%= encodeURIComponent(category || '') %>&status=<%= encodeURIComponent(status || '') %>">
                                Next
                            </a>
                        </li>
                    <% } %>

                </ul>
            </nav>
        <% } %>
        <!-- ================= End Pagination ================= -->

    </div>
    <!-- ================= End Container ================= -->

</div>

<%- include('../footer') %>
