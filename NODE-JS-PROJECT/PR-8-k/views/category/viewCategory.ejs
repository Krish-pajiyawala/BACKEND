<%- include('../header') %>
<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Category Management</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Categories</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="card-title mb-0">Category List</h5>
                            <a href="/category/add-category" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> Add New Category
                            </a>
                        </div>
                        
                        <!-- Categories Table -->
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="thead-dark">
                                    <tr>
                                        <th width="5%">#</th>
                                        <th width="35%">Category Name</th>
                                        <th width="30%">Category Image</th>
                                        <th width="30%" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(categories.length > 0) { %>
                                        <% categories.forEach((categ, i)=>{ %>
                                            <tr>
                                                <td class="font-weight-bold"><%= i+1 %></td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="category-name">
                                                            <h6 class="mb-0"><%= categ.categoryName %></h6>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <% if(categ.categoryImage) { %>
                                                        <div class="category-image-container">
                                                            <img src="<%= categ.categoryImage %>" 
                                                                 alt="<%= categ.categoryName %>" 
                                                                 class="img-thumbnail rounded" 
                                                                 style="width: 80px; height: 80px; object-fit: cover;">
                                                        </div>
                                                    <% } else { %>
                                                        <div class="no-image-placeholder">
                                                            <div class="rounded bg-light d-flex align-items-center justify-content-center" 
                                                                 style="width: 80px; height: 80px;">
                                                                <i class="fas fa-image text-muted"></i>
                                                            </div>
                                                        </div>
                                                    <% } %>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group" role="group">
                                                        <a href="/category/edit-category/<%= categ.id %>" 
                                                           class="btn btn-outline-info btn-sm" 
                                                           title="Edit Category">
                                                            <i class="fas fa-edit"></i> Edit
                                                        </a>
                                                        <a href="/category/delete-category/<%= categ.id %>" 
                                                           class="btn btn-outline-danger btn-sm" 
                                                           title="Delete Category"
                                                           onclick="return confirm('Are you sure you want to delete this category?')">
                                                            <i class="fas fa-trash-alt"></i> Delete
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="text-center py-5">
                                                <div class="empty-state">
                                                    <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                                                    <h5>No Categories Found</h5>
                                                    <p class="text-muted">You haven't added any categories yet.</p>
                                                    <a href="/category/add-category" class="btn btn-primary mt-2">
                                                        <i class="fas fa-plus"></i> Add Your First Category
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Pagination Info (if applicable) -->
                        <% if(categories.length > 10) { %>
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <div class="text-muted">
                                    Showing 1 to 10 of <%= categories.length %> entries
                                </div>
                                <nav>
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                                        </li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">Next</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->

    <style>
        /* Additional CSS for category table styling */
        .card-title {
            color: #2c3e50;
            font-weight: 600;
        }
        
        .thead-dark {
            background: linear-gradient(45deg, #2c3e50, #34495e);
        }
        
        .thead-dark th {
            border: none;
            font-weight: 500;
            letter-spacing: 0.5px;
        }
        
        .table-hover tbody tr:hover {
            background-color: rgba(52, 152, 219, 0.08);
            transform: translateY(-1px);
            transition: all 0.2s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        
        .btn-outline-info {
            border-color: #17a2b8;
            color: #17a2b8;
        }
        
        .btn-outline-info:hover {
            background-color: #17a2b8;
            color: white;
        }
        
        .btn-outline-danger {
            border-color: #e74c3c;
            color: #e74c3c;
        }
        
        .btn-outline-danger:hover {
            background-color: #e74c3c;
            color: white;
        }
        
        .category-name h6 {
            color: #2c3e50;
            font-weight: 600;
        }
        
        .category-name small {
            font-size: 0.75rem;
        }
        
        .img-thumbnail {
            border: 2px solid #ecf0f1;
            transition: all 0.3s ease;
        }
        
        .img-thumbnail:hover {
            border-color: #3498db;
            transform: scale(1.05);
        }
        
        .empty-state {
            padding: 40px 20px;
        }
        
        .empty-state i {
            opacity: 0.5;
        }
        
        .empty-state h5 {
            color: #7f8c8d;
            margin-bottom: 10px;
        }
        
        .bg-light-primary {
            background-color: rgba(52, 152, 219, 0.1) !important;
            border-left: 4px solid #3498db;
        }
        
        .pagination .page-item.active .page-link {
            background-color: #3498db;
            border-color: #3498db;
        }
        
        .pagination .page-link {
            color: #3498db;
        }
        
        @media (max-width: 768px) {
            .btn-group {
                display: flex;
                flex-direction: column;
                gap: 5px;
            }
            
            .btn-group .btn {
                width: 100%;
            }
            
            .category-image-container {
                text-align: center;
            }
        }
    </style>
</div>
<!-- ============================================================== -->
<%- include('../footer') %>